<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PermisC.Views.PermisPage"
             Title="Permis">
    <ScrollView>
        <StackLayout Spacing="10" Padding="15">
            <Label Text="Poid total" FontSize="Medium"/>
            <Label Text="(en Kilogramme) :" FontSize="Medium"/>
            <Label Text="{Binding poidTotal}" FontSize="Small" />
            <Label Text="Nombre total d'essieux :" FontSize="Medium"/>
            <Label Text="{Binding essTotal}" FontSize="Small" />
            <Label Text="Permis requis :" FontSize="Medium"/>
            <Label Text="{Binding permis}" FontSize="Small"/>
            <Label Text="Formation requise :" FontSize="Medium"/>
            <Label Text="{Binding formation}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>